<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1.0dp" android:color="@color/red_pressed" />
            <solid android:color="@color/red_pressed" />
            <corners android:radius="@dimen/round_radius" />
        </shape>

    </item>
    <item android:state_focused="true">
        <shape>
            <stroke android:width="1.0dp" android:color="@color/red_pressed" />
            <solid android:color="@color/red_pressed" />
            <corners android:radius="@dimen/round_radius" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="1.0dp" android:color="@color/red_pressed" />
            <solid android:color="@color/red_pressed" />
            <corners android:radius="@dimen/round_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1.0dp" android:color="@color/red_title" />
            <solid android:color="@color/red_title" />
            <corners android:radius="@dimen/round_radius" />
        </shape>
    </item>

</selector>